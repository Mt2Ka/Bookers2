
  <div class="container px-5 px-sm-0">
    <% if @book.errors.any? %>
      <div class="error-messages">
        <p class="h3"><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
       <table class="table">
         <tbody>
           <tr>
             <th>name</th>
             <th><%= @user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
           </tr>
         </tbody>
       </table>
        <div class="row">
          <%= link_to(edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block") do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>

        <%= form_with model:@book do |f| %>
        <label for="book_title">Title</label></br>
        <%= f.text_field :title %></br>
        <label for="book_opinion" class="pt-3">Opinion</label></br>
        <%= f.text_area :body %></br>
        <div class="pt-2">
          <button class="btn btn-success" type="submit">Create Book</button>
        </div>
        <% end %>
      </div>



        <div class="pt-3 col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
           <thead>
             <tr>
               <th scope="col-4"></th>
               <th scope="col-4">Title</th>
               <th scope="col-4">Opinion</th>
               <th colspan="3"></th>
             </tr>
           </thead>

           <tbody>
               <% @books .each do |book| %>
               <tr>
                 <td><span>
                   <%= link_to user_path(book.user) do %>
                   <%= image_tag book.user.get_profile_image(100,100) %>
                   <% end %>
                 </span></td>
                 <td><span>
                   <%= link_to book_path(book.id) do %>
                   <%= book.title %>
                   <% end %>
                 </td></span>
                 <td><span><%= book.body %></td></span>
               </tr>
               <% end %>

            </tbody>

          </table>

        </div>
    </div>
  </div>



