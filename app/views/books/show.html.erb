<h1>User info</h1>


<h1>New Book</h1>

  <% if @book.errors.any? %>
  <div class="error-messages">
    <p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>


  <%= form_with model:@book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  <% end %>


  <h1>Book detail</h1>

  <div><%= link_to book_path(@book.id) do %></div>
  <div><%= @book.title %></div>
  <% end %>
  <div><%= @book.body %></div>
  <div class="links"><%= link_to "Edit", edit_book_path(@book.id) %></div>
	<div class="links"><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></div>
  
  


