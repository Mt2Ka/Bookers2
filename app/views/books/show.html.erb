
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
       <table class="table">
         <tbody>
           <tr>
             <th>name</th>
             <th><%= @user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
           </tr>
         </tbody>
       </table>
       <div class="pt-2">
        <%= link_to(edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block") do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
       </div>

        <h2 class="mt-3">New book</h2>

        <% if @book.errors.any? %>
        <div class="error-messages">
        <p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
        </div>
        <% end %>


        <%= form_with model:@book2 do |f| %>
        <label for="book_title">Title</label></br>
        <%= f.text_field :title %></br>
        <label for="book_opinion" class="pt-3">Opinion</label></br>
        <%= f.text_area :body %></br>
        <div class="pt-2">
          <button class="btn btn-success" type="submit">Create Book</button>
        </div>
        <% end %>
      </div>

        <div class="pt-3 col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
           <tbody>
             <tr>
               <td>
                <%= image_tag @user.get_profile_image(100,100) %>
                 <%= link_to user_path(@user.id) do %></br>
                 <%= @user.name %></br>
                 <% end %>
               </td>
               <td>
                <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
                <% end %>
               </td>
               <td><%= @book.body %></td>
               <td>
               <% if @book.user == current_user %>
                 <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
               </td>
               <td>
                <%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "Are you sure?" %>
               </td>
              <% end %>
             </tr>
           </tbody>
          </table>
        </div>
    </div>
  </div>




