<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>User Info</h1>

      <% if @user.errors.any? %>
      <p class="h3"><%= @user.errors.count %>error prohibited this obj from being saved:</p>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
      <label for="inputName">Name</label></br>
      <%= f.text_field :name, autofocus: true, id:"inputName" %></br>
      <label for="inputImage" class="pt-2">Image</label></br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></br> 
      <label for="inputIntroduction" class="pt-2">Introduction</label></br>
      <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %></br>
      <div class="pt-3">
        <button class="btn btn-secondary" type="submit">Update User</button>
      </div>
      <% end %>
      
 
    </div>
  </div>
</div>
