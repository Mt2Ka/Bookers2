<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/0b2b8aecc9.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="style.css">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-bland h5 text-light text-decoration-none" href="https://cf8f9bd9c4a6456fa73fef7201459ed4.vfs.cloud9.ap-northeast-1.amazonaws.com/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if user_signed_in? %>
              <li class="nav-link text-light">
              <%= link_to user_path(current_user.id),class:"text-decoration-none" do %>   
              <i class="fas fa-home" style="color:white;"></i>
              <span class="text-light">Home</span>
              <% end %>
              </li>
            
              <li class="nav-link text-light">
              <%= link_to users_path,class:"text-decoration-none" do %>   
              <i class="fas fa-users" style="color:white;"></i>
              <span class="text-light">Users</span>
              <% end %>
              </li>
             
              <li class="nav-link text-light">
              <%= link_to books_path,class:"text-decoration-none" do %> 
              <i class="fas fa-book-open" style="color:white;"></i>
              <span class="text-light">Books</span>
              <% end %>
              </li>
            
              <li class="nav-link text-light">
              <%= link_to destroy_user_session_path,method: :delete,class:"text-decoration-none" do %> 
              <i class="fas fa-sign-out-alt" style="color:white;"></i>
              <span class="text-light">Log out</span>
              <% end %>
              </li>
            
            <% else %>
              <li class="nav-link text-light">
              <%= link_to root_path,class:"text-decoration-none" do %>
              <i class="fas fa-home" style="color:white;"></i>
              <span class="text-light">Home</span>
              <% end %>
              
              </li>
            
              <li class="nav-link text-light">
              <%= link_to home_about_path,class:"text-decoration-none" do %> 
              <i class="fas fa-link" style="color:white;"></i>
              <span class="text-light">About</span>
              <% end %>
              </li>
            
              <li class="nav-link text-light">
              <%= link_to new_user_registration_path,class:"text-decoration-none" do %>   
              <i class="fas fa-user-plus" style="color:white;"></i>
              <span class="text-light">Sign up</span>
              <% end %>
              </li>
            
              <li class="nav-link text-light">
              <%= link_to new_user_session_path,class:"text-decoration-none" do %>   
              <i class="fas fa-sign-in-alt" style="color:white;"></i>
              <span class="text-light">Log in</span>
              <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
    <p class="notice mb-0"><%= notice %></p>
    <p class="alert mb-0"><%= alert %></p>
      <%= yield %>
    </main>

    <footer>
     <div class="mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
     </div>
    </footer>
  </body>
</html>


