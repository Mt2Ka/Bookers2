<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/0b2b8aecc9.js" crossorigin="anonymous"></script>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="style.css">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="text-light text-decoration-none" href="https://cf8f9bd9c4a6456fa73fef7201459ed4.vfs.cloud9.ap-northeast-1.amazonaws.com/">
            <p class="h4"><span>Bookers</span></p>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if user_signed_in? %>
              <li class="mt-3 mt-2.2 ml-2">
              <%= link_to user_path(current_user.id) do %>   
              <i class="fas fa-home" style="color:white;"></i>
              <% end %>
              <%= link_to "Home",user_path(current_user.id),class:"text-light text-decoration-none" %>
              </li>
            
              <li class="mt-3 ml-2">
              <%= link_to users_path do %>   
              <i class="fa fa-users" style="color:white;"></i>
              <% end %>
              <%= link_to "Users",users_path,class:"text-light text-decoration-none" %>
              </li>
             
              <li class="mt-3 ml-2">
              <%= link_to books_path do %> 
              <i class="fa fa-book-open" style="color:white;"></i>
              <% end %>
              <%= link_to "Books",books_path,class:"text-light text-decoration-none" %>
              </li>
            
              <li class="mt-3 ml-2">
              <%= link_to destroy_user_session_path,method: :delete do %> 
              <i class="fa fa-sign-out-alt" style="color:white;"></i>
              <% end %>
              <%= link_to "Log out",destroy_user_session_path,method: :delete,class:"text-light text-decoration-none" %>
              </li>
            
            <% else %>
              <li class="pt-3 mt-2.2 ml-2">
              <%= link_to root_path do %>
              <i class="fa fa-home" style="color:white;"></i>
              <% end %>
              <%= link_to "Home",root_path,class:"text-light text-decoration-none" %>
              </li>
            
              <li class="mt-3 ml-2">
              <%= link_to home_about_path do %> 
              <i class="fa fa-link" style="color:white;"></i>
              <% end %>
              <%= link_to "About",home_about_path,class:"text-light text-decoration-none" %>
              </li>
            
              <li class="mt-3 ml-2">
              <%= link_to new_user_registration_path do %>   
              <i class="fa fa-user-plus" style="color:white;"></i>
              <% end %>
              <%= link_to "Sign up",new_user_registration_path,class:"text-light text-decoration-none" %>
              </li>
            
              <li class="mt-3 ml-2">
              <%= link_to new_user_session_path do %>   
              <i class="fa fa-sign-in-alt" style="color:white;"></i>
              <% end %>
              <%= link_to "Log in",new_user_session_path,class:"text-light text-decoration-none" %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
      <%= yield %>
    </main>

    <footer>
     <div class="mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
     </div>
    </footer>
  </body>
</html>


